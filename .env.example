# EtchNFT Environment Variables
# Copy this file to .env for local development
# Set these in your Cloudflare Pages environment for production

# PayPal Payments (Production)
PUBLIC_PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here
PAYPAL_ENVIRONMENT=sandbox

# NFT Data Provider (Alchemy)
ALCHEMY_API_KEY=your_alchemy_api_key_here
ALCHEMY_ETH_MAINNET_URL=https://eth-mainnet.g.alchemy.com/v2/your_alchemy_api_key_here
ALCHEMY_POLYGON_MAINNET_URL=https://polygon-mainnet.g.alchemy.com/v2/your_alchemy_api_key_here
ALCHEMY_BASE_MAINNET_URL=https://base-mainnet.g.alchemy.com/v2/your_alchemy_api_key_here

# Smart Contract Deployment
PRIVATE_KEY=your_wallet_private_key_here
ETHERSCAN_API_KEY=your_etherscan_api_key_here
POLYGONSCAN_API_KEY=your_polygonscan_api_key_here
BASESCAN_API_KEY=your_basescan_api_key_here
OPTIMISM_API_KEY=your_optimism_api_key_here

# Contract Addresses (populated after deployment)
ETCHNFT_CONTRACT_MAINNET=0x0000000000000000000000000000000000000000
ETCHNFT_CONTRACT_POLYGON=0x0000000000000000000000000000000000000000
ETCHNFT_CONTRACT_BASE=0x0000000000000000000000000000000000000000
ETCHNFT_CONTRACT_OPTIMISM=0x0000000000000000000000000000000000000000

# Testnet Contract Addresses
ETCHNFT_CONTRACT_SEPOLIA=0x0000000000000000000000000000000000000000
ETCHNFT_CONTRACT_MUMBAI=0x0000000000000000000000000000000000000000
ETCHNFT_CONTRACT_BASE_SEPOLIA=0x0000000000000000000000000000000000000000

# Webhook Secrets (for payment confirmations)
COINBASE_WEBHOOK_SECRET=your_coinbase_webhook_secret_here

# Admin API (for order management)
ADMIN_API_KEY=your_secure_admin_api_key_here

# Crypto Payments
COINBASE_COMMERCE_API_KEY=your_coinbase_commerce_api_key_here

# Email Service
RESEND_API_KEY=your_resend_api_key_here

# GitHub OAuth (for admin access)
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here

# Database (automatically configured in Cloudflare)
# DB=your_d1_database_binding

# Optional: Analytics & Monitoring
SENTRY_DSN=your_sentry_dsn_here
GOOGLE_ANALYTICS_ID=your_ga_id_here