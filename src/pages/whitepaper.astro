---
import "../styles/global.css";
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';
import { CartProvider } from '../components/react/CartContext';
import { 
  DownloadIcon, 
  EyeIcon, 
  BookOpenIcon, 
  ChartLineIcon, 
  CpuIcon, 
  CoinsIcon, 
  ShieldCheckIcon, 
  ListChecksIcon, 
  InfoIconComponent, 
  RocketIcon, 
  ImagesIcon 
} from '../components/react/WhitepaperIcons';

const title = 'EtchNFT White Paper - Bridging Digital and Physical NFT Worlds';
const description = 'Comprehensive white paper on EtchNFT: transforming digital NFTs into premium physical collectibles. Technical architecture, market analysis, and business model.';
const keywords = 'EtchNFT white paper, NFT physical collectibles, blockchain technology, phygital NFTs, digital to physical transformation';
---

<html lang="en" class="scroll-smooth dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="author" content="EtchNFT" />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href="https://etchnft.com/whitepaper" />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="article" />
    <meta property="og:url" content="https://etchnft.com/whitepaper" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="https://etchnft.com/og-image.png" />
    <meta property="og:site_name" content="EtchNFT" />
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content="https://etchnft.com/whitepaper" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="https://etchnft.com/og-image.png" />
    <meta name="twitter:site" content="@EtchNFT" />
    
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" href="/etchlogo.png" />
    <link rel="apple-touch-icon" href="/etchlogo.png" />
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;500;600;700&display=swap" rel="stylesheet" />

    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      :root {
        --primary: #DB2777;
        --secondary: #7F73F7;
        --accent: #41C6BB;
        --bg-dark: #0b0b0f;
        --glass-bg: rgba(255, 255, 255, 0.05);
        --glass-border: rgba(255, 255, 255, 0.1);
      }

      body {
        font-family: 'Space Grotesk', sans-serif;
        background: var(--bg-dark);
        color: white;
        min-height: 100vh;
        position: relative;
        overflow-x: hidden;
      }

      .hero-gradient {
        background: linear-gradient(135deg, 
          var(--bg-dark) 0%,
          rgba(123, 31, 162, 0.3) 25%,
          rgba(219, 39, 119, 0.3) 50%,
          rgba(65, 198, 187, 0.3) 75%,
          var(--bg-dark) 100%
        );
      }

      .glass {
        background: var(--glass-bg);
        backdrop-filter: blur(10px);
        border: 1px solid var(--glass-border);
        border-radius: 16px;
      }

      .neon-text {
        text-shadow: 0 0 10px var(--accent), 0 0 20px var(--accent), 0 0 30px var(--accent);
      }

      .btn-gradient {
        background: linear-gradient(135deg, var(--primary), var(--secondary));
        transition: all 0.3s ease;
      }

      .btn-gradient:hover {
        background: linear-gradient(135deg, var(--secondary), var(--accent));
        transform: translateY(-2px);
        box-shadow: 0 10px 30px rgba(219, 39, 119, 0.3);
      }

      .btn-download {
        background: linear-gradient(135deg, var(--accent), var(--secondary));
        color: white;
        padding: 12px 24px;
        border-radius: 12px;
        text-decoration: none;
        font-weight: 600;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        transition: all 0.3s ease;
      }

      .btn-download:hover {
        background: linear-gradient(135deg, var(--secondary), var(--primary));
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(65, 198, 187, 0.3);
      }

      .fade-in-up {
        animation: fadeInUp 1s ease-out;
      }

      @keyframes fadeInUp {
        from {
          opacity: 0;
          transform: translateY(50px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      /* Retro grid background */
      .retro-grid {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image: 
          linear-gradient(cyan 1px, transparent 1px),
          linear-gradient(90deg, cyan 1px, transparent 1px);
        background-size: 50px 50px;
        opacity: 0.1;
        z-index: -1;
      }
    </style>
  </head>

  <body class="hero-gradient">
    <div class="retro-grid"></div>
    
    <CartProvider client:load>
      <Nav />
      
      <main class="min-h-screen px-6 py-20 fade-in-up">
        <div class="max-w-4xl mx-auto">
          <article class="glass p-8 mb-8">
            <header class="text-center mb-12">
              <h1 class="text-4xl sm:text-6xl font-bold mb-6 neon-text flex items-center justify-center">
                <img src="/etchlogo.png" alt="EtchNFT Logo" class="w-12 h-12 sm:w-16 sm:h-16 mr-4" />
                White Paper
              </h1>
              
              <p class="text-xl sm:text-2xl text-gray-300 mb-8 leading-relaxed">
                Bridging Digital and Physical Worlds Through <span class="text-transparent bg-clip-text bg-gradient-to-r from-primary to-accent">Premium NFT Collectibles</span>
              </p>
              
              <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-8">
                <a href="/EtchNFT-WhitePaper.md" download="EtchNFT-WhitePaper.md" class="btn-download">
                  <DownloadIcon client:load />
                  Download White Paper (MD)
                </a>
                <a href="/EtchNFT-WhitePaper.md" target="_blank" class="glass border-2 border-accent text-accent font-bold py-3 px-6 rounded-lg text-sm no-underline hover:bg-accent hover:text-black transition">
                  <EyeIcon client:load className="w-5 h-5 mr-2" />
                  View Online
                </a>
              </div>
            </header>
            
            <section class="mb-10">
              <h2 class="text-2xl font-bold mb-6 text-accent flex items-center">
                <BookOpenIcon client:load className="w-6 h-6 mr-2" />Executive Summary
              </h2>
              <p class="text-lg text-gray-300 mb-6 leading-relaxed">
                EtchNFT represents a groundbreaking approach to bridging the digital and physical worlds by transforming NFTs into premium laser-etched collectibles. As the NFT market evolves from speculative trading toward utility-driven applications, EtchNFT addresses the fundamental challenge of making digital ownership tangible and meaningful.
              </p>
              
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
                <div class="glass p-6">
                  <h3 class="text-accent font-bold mb-3 flex items-center">
                    <ChartLineIcon client:load className="w-5 h-5 mr-2" />Market Opportunity
                  </h3>
                  <p class="text-sm text-gray-400">Global collectibles market projected to reach $902 billion by 2035, with NFT market expanding at 30.41% CAGR.</p>
                </div>
                <div class="glass p-6">
                  <h3 class="text-accent font-bold mb-3 flex items-center">
                    <CpuIcon client:load className="w-5 h-5 mr-2" />Technical Innovation
                  </h3>
                  <p class="text-sm text-gray-400">Built on Astro with React, deployed on Cloudflare Workers with multi-chain NFT support and serverless architecture.</p>
                </div>
                <div class="glass p-6">
                  <h3 class="text-accent font-bold mb-3 flex items-center">
                    <CoinsIcon client:load className="w-5 h-5 mr-2" />Business Model
                  </h3>
                  <p class="text-sm text-gray-400">Transaction-based revenue with multiple income streams, targeting $11.7M annual revenue by Year 3.</p>
                </div>
                <div class="glass p-6">
                  <h3 class="text-accent font-bold mb-3 flex items-center">
                    <ShieldCheckIcon client:load className="w-5 h-5 mr-2" />Security First
                  </h3>
                  <p class="text-sm text-gray-400">Non-custodial design with read-only wallet access, zero private key storage, and PCI DSS compliance.</p>
                </div>
              </div>
            </section>
            
            <section class="mb-10">
              <h2 class="text-2xl font-bold mb-6 text-accent flex items-center">
                <ListChecksIcon client:load className="w-6 h-6 mr-2" />Key Sections
              </h2>
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-left">
                <div class="glass p-4">
                  <h3 class="font-bold mb-2">📋 Problem Statement</h3>
                  <p class="text-sm text-gray-400">Challenges in current NFT ecosystem</p>
                </div>
                <div class="glass p-4">
                  <h3 class="font-bold mb-2">🔧 Solution Overview</h3>
                  <p class="text-sm text-gray-400">How EtchNFT addresses these problems</p>
                </div>
                <div class="glass p-4">
                  <h3 class="font-bold mb-2">📊 Market Analysis</h3>
                  <p class="text-sm text-gray-400">Industry trends and growth projections</p>
                </div>
                <div class="glass p-4">
                  <h3 class="font-bold mb-2">🏗️ Technical Architecture</h3>
                  <p class="text-sm text-gray-400">System design and implementation</p>
                </div>
                <div class="glass p-4">
                  <h3 class="font-bold mb-2">💼 Business Model</h3>
                  <p class="text-sm text-gray-400">Revenue streams and projections</p>
                </div>
                <div class="glass p-4">
                  <h3 class="font-bold mb-2">🛣️ Roadmap</h3>
                  <p class="text-sm text-gray-400">6-phase development plan through 2027</p>
                </div>
              </div>
            </section>
            
            <section class="mb-10">
              <h2 class="text-2xl font-bold mb-6 text-accent flex items-center">
                <InfoIconComponent client:load className="w-6 h-6 mr-2" />Document Information
              </h2>
              <div class="glass p-6">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                  <div>
                    <h3 class="font-bold mb-2">📅 Published</h3>
                    <p class="text-gray-400">January 2025</p>
                  </div>
                  <div>
                    <h3 class="font-bold mb-2">👨‍💻 Authors</h3>
                    <p class="text-gray-400">Andrea Cozart-Lundin, EtchNFT Studio</p>
                  </div>
                  <div>
                    <h3 class="font-bold mb-2">📄 Version</h3>
                    <p class="text-gray-400">v1.0</p>
                  </div>
                  <div>
                    <h3 class="font-bold mb-2">📝 Format</h3>
                    <p class="text-gray-400">Markdown (.md)</p>
                  </div>
                </div>
              </div>
            </section>
            
            <section class="text-center">
              <h2 class="text-2xl font-bold mb-6 text-accent flex items-center">
                <RocketIcon client:load className="w-6 h-6 mr-2" />Ready to Get Started?
              </h2>
              <p class="text-lg text-gray-300 mb-8">
                Join the revolution in phygital NFT collectibles. Transform your digital assets into premium physical items.
              </p>
              <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
                <a href="/gallery" class="btn-gradient text-white font-bold py-4 px-8 rounded-full text-lg no-underline flex items-center">
                  <ImagesIcon client:load className="w-6 h-6 mr-2" />Browse Gallery
                </a>
                <a href="/EtchNFT-WhitePaper.md" download="EtchNFT-WhitePaper.md" class="btn-download">
                  <DownloadIcon client:load />
                  Download White Paper
                </a>
              </div>
            </section>
          </article>
        </div>
      </main>
      
      <Footer />
    </CartProvider>
  </body>
</html>