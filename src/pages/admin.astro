---
import BaseLayout from '../layouts/BaseLayout.astro';
import { auth } from '../lib/auth';

const { user } = await auth.handleRequest(Astro);
if (!user) {
  return Astro.redirect('/api/auth/login/github');
}

const db = Astro.locals.runtime.env.DB;
const result = await db.prepare('SELECT * FROM orders ORDER BY created_at DESC').all();
const orders = result.results;
---

<BaseLayout title="EtchNFT Admin">
  <section class="hero-gradient min-h-screen flex flex-col items-center justify-start px-6 py-12 fade-in-up">
    <div class="glass w-full max-w-5xl text-left">
      <h2 class="text-3xl font-bold text-white mb-6 drop-shadow-[0_0_12px_rgba(0,240,255,0.4)]">
        <i class="fa-solid fa-screwdriver-wrench mr-2"></i>Admin Dashboard
      </h2>

      {orders.length === 0 ? (
        <p class="text-gray-400 text-sm">No orders yet.</p>
      ) : (
        <div class="overflow-x-auto">
          <table class="w-full text-left border-collapse text-sm">
            <thead class="text-accent border-b border-zinc-700 uppercase tracking-wider text-xs">
              <tr>
                <th class="py-3 pr-4">Order ID</th>
                <th class="py-3 pr-4">Name</th>
                <th class="py-3 pr-4">NFT</th>
                <th class="py-3 pr-4">Status</th>
                <th class="py-3">Action</th>
              </tr>
            </thead>
            <tbody>
              {orders.map(order => (
                <tr class="border-b border-zinc-800 hover:bg-zinc-800/30 transition">
                  <td class="py-3 pr-4 font-mono text-gray-400">{order.id}</td>
                  <td class="py-3 pr-4">{order.full_name ?? 'â€”'}</td>
                  <td class="py-3 pr-4">{order.nft_name ?? 'Untitled'}</td>
                  <td class="py-3 pr-4 text-yellow-400">{order.status}</td>
                  <td class="py-3">
                    <form method="POST" action={`/api/admin/mark-etched?id=${order.id}`}>
                      <button class="text-xs px-3 py-1 bg-accent text-black rounded-full font-semibold">
                        Mark Etched
                      </button>
                    </form>
                  </td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
      )}
    </div>
  </section>
</BaseLayout>
