---
const title = 'EtchNFT – You’re In!';
const orderId = Astro.url.searchParams.get('order');
---

<html lang="en" class="scroll-smooth dark">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <link rel="stylesheet" href="/src/styles/global.css" />
    <link href="https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap" rel="stylesheet" />
  </head>

  <body class="hero-gradient min-h-screen flex flex-col items-center justify-center text-center px-6 py-12 fade-in-up">
    <div class="glass max-w-xl w-full border-2 border-green-400 p-6">
      {orderId ? (
        <>
          <h1 class="text-3xl sm:text-4xl font-bold mb-4 text-green-400">
            <i class="fa-solid fa-check-circle mr-2"></i>Payment Successful!
          </h1>
          <p class="text-md text-gray-300 mb-4">
            Your order #{orderId} has been confirmed. We'll start etching your NFTs and send you a confirmation email shortly.
          </p>
          <div class="flex gap-4 justify-center">
            <a href="/my-orders" class="inline-block bg-accent text-black px-6 py-2 rounded-full font-bold hover:bg-white transition">
              View My Orders
            </a>
            <a href="/gallery" class="inline-block bg-zinc-700 text-white px-6 py-2 rounded-full font-bold hover:bg-zinc-600 transition">
              Etch More NFTs
            </a>
          </div>
        </>
      ) : (
        <>
          <h1 class="text-3xl sm:text-4xl font-bold mb-4 text-green-400">
            <i class="fa-solid fa-check-circle mr-2"></i>Welcome to the Etch Era!
          </h1>
          <p class="text-md text-gray-300">
            You've joined the early access list. Keep an eye on your inbox for special drops, launches, and surprises.
          </p>
          <div class="mt-6">
            <a href="/gallery" class="inline-block bg-accent text-black px-6 py-2 rounded-full font-bold hover:bg-white transition">
              Start Etching →
            </a>
          </div>
        </>
      )}
    </div>
  </body>
</html>
