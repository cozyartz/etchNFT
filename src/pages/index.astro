---
import "../styles/global.css";
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';
import WalletConnect from '../components/WalletConnect.astro';
import { CartProvider } from '../components/react/CartContext';
import { HeroLogoIcon, MultiChainIcon, FastProcessingIcon, PremiumQualityIcon, GalleryButtonIcon, OrdersButtonIcon, WalletConnectIcon } from '../components/react/IndexPageIcons';
const client: 'only' = 'only';

const title = 'EtchNFT – Transform Your Digital NFTs into Physical Collectibles';
const description = 'Turn your NFTs into laser-etched physical collectibles. Premium quality plaques, custom apparel, and displays. Ethereum, Polygon, and Solana supported. Order with crypto or card.';
const keywords = 'NFT physical collectibles, laser etched NFT, blockchain art, crypto collectibles, digital to physical NFT, NFT marketplace, ethereum NFT, polygon NFT, solana NFT';
const structuredData = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "EtchNFT",
  "description": description,
  "url": "https://etchnft.com",
  "potentialAction": {
    "@type": "SearchAction",
    "target": {
      "@type": "EntryPoint",
      "urlTemplate": "https://etchnft.com/search?q={search_term_string}"
    },
    "query-input": "required name=search_term_string"
  },
  "sameAs": [
    "https://twitter.com/EtchNFT",
    "https://discord.gg/etchnft"
  ]
};
---

<html lang="en" class="scroll-smooth dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="author" content="EtchNFT" />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href="https://etchnft.com" />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://etchnft.com" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="https://etchnft.com/og-image.png" />
    <meta property="og:site_name" content="EtchNFT" />
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content="https://etchnft.com" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="https://etchnft.com/og-image.png" />
    <meta name="twitter:site" content="@EtchNFT" />
    
    <!-- Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify(structuredData)}></script>
    
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" href="/etchlogo.png" />
    <link rel="apple-touch-icon" href="/etchlogo.png" />
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;500;600;700&display=swap" rel="stylesheet" />

  </head>

  <body class="bg-retro-dark">
    <CartProvider client:load>
      <Nav />
      
      <main class="relative min-h-screen flex flex-col justify-center items-center text-center px-6 py-20">
        <!-- Dynamic background effects -->
        <div class="fixed inset-0 pointer-events-none">
          <div class="absolute inset-0 bg-cyber-gradient opacity-20 animate-gradient-shift"></div>
          <div class="absolute inset-0 bg-retro-scan bg-scan animate-scan"></div>
        </div>
        
        <!-- Hero Section -->
        <article class="relative z-10 glass-strong max-w-5xl w-full p-12 mb-12 scan-lines">
          <header class="mb-12">
            <!-- Glitch effect logo -->
            <div class="relative mb-8">
              <h1 class="text-6xl sm:text-8xl font-cyber font-bold text-retro-gradient glitch flex items-center justify-center" data-text="EtchNFT">
                <img src="/etchlogo.png" alt="EtchNFT Logo" class="w-12 h-12 sm:w-16 sm:h-16 mr-4 animate-neon-pulse" />
                EtchNFT
              </h1>
              <div class="absolute inset-0 bg-primary/10 blur-3xl animate-pulse"></div>
            </div>
            
            <p class="text-xl sm:text-3xl text-gray-300 mb-8 leading-relaxed font-retro">
              Transform your <span class="text-neon animate-neon-pulse">digital NFTs</span> into premium 
              <span class="text-secondary animate-flicker">physical collectibles</span>
            </p>
            
            <div class="flex items-center justify-center gap-2 text-neon-green font-cyber text-sm tracking-wider">
              <span class="animate-pulse">●</span>
              <span>SYSTEM ONLINE</span>
              <span class="animate-pulse">●</span>
            </div>
          </header>
          
          <section class="mb-12">
            <h2 class="text-2xl font-cyber text-secondary mb-6 tracking-wider">
              PREMIUM LASER-ETCHED NFT COLLECTIBLES
            </h2>
            <p class="text-lg text-gray-400 mb-8 leading-relaxed">
              High-quality laser-etched plaques, custom apparel, and acrylic displays.<br />
              Multi-chain support: Ethereum • Polygon • Solana • Pay with crypto or card
            </p>
            
            <!-- Feature Cards -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-12">
              <div class="card-retro group">
                <div class="text-center">
                  <div class="w-16 h-16 bg-primary/20 rounded-full flex items-center justify-center mx-auto mb-4 group-hover:animate-spin">
                    <MultiChainIcon client:only={client} />
                  </div>
                  <h3 class="text-primary font-cyber font-bold mb-2 tracking-wider">MULTI-CHAIN</h3>
                  <p class="text-sm text-gray-400">Ethereum, Polygon, Solana, and more blockchain networks supported</p>
                </div>
              </div>
              
              <div class="card-retro group">
                <div class="text-center">
                  <div class="w-16 h-16 bg-secondary/20 rounded-full flex items-center justify-center mx-auto mb-4 group-hover:animate-pulse">
                    <FastProcessingIcon client:only={client} />
                  </div>
                  <h3 class="text-secondary font-cyber font-bold mb-2 tracking-wider">FAST PROCESSING</h3>
                  <p class="text-sm text-gray-400">Quick order processing and worldwide shipping available</p>
                </div>
              </div>
              
              <div class="card-retro group">
                <div class="text-center">
                  <div class="w-16 h-16 bg-neon-green/20 rounded-full flex items-center justify-center mx-auto mb-4 group-hover:animate-float">
                    <PremiumQualityIcon client:only={client} />
                  </div>
                  <h3 class="text-neon-green font-cyber font-bold mb-2 tracking-wider">PREMIUM QUALITY</h3>
                  <p class="text-sm text-gray-400">Laser-etched with precision on premium materials</p>
                </div>
              </div>
            </div>
          </section>
          
          <!-- Action Buttons -->
          <nav class="flex flex-col sm:flex-row gap-6 justify-center items-center mb-8">
            <a href="/gallery" class="btn-cyber group" aria-label="Browse NFT Gallery">
              <GalleryButtonIcon client:only={client} />
              <span>BROWSE GALLERY</span>
            </a>
            <a href="/my-orders" class="btn-neon group" aria-label="View My Orders">
              <OrdersButtonIcon client:only={client} />
              <span>MY ORDERS</span>
            </a>
          </nav>
        </article>
        
        <!-- Wallet Connection Section -->
        <section class="relative z-10 glass-strong max-w-3xl w-full p-8 scan-lines">
          <div class="text-center">
            <h2 class="text-3xl font-cyber font-bold mb-4 text-retro-gradient tracking-wider flex items-center justify-center">
              <WalletConnectIcon client:only={client} />
              CONNECT WALLET
            </h2>
            <p class="text-gray-400 mb-8 font-retro">
              Connect your crypto wallet to view your NFT collection and start creating physical collectibles
            </p>
            <div class="flex justify-center">
              <WalletConnect />
            </div>
          </div>
        </section>
        
        <!-- Floating Elements -->
        <div class="fixed inset-0 pointer-events-none">
          <div class="absolute top-1/4 left-1/4 w-2 h-2 bg-primary rounded-full animate-float opacity-60"></div>
          <div class="absolute top-3/4 right-1/4 w-1 h-1 bg-secondary rounded-full animate-float opacity-40" style="animation-delay: 2s;"></div>
          <div class="absolute top-1/2 left-3/4 w-1.5 h-1.5 bg-neon-green rounded-full animate-float opacity-50" style="animation-delay: 4s;"></div>
        </div>
      </main>
      
      <Footer />
    </CartProvider>

    <script>
      // Cyberpunk mouse trail effect
      document.addEventListener('mousemove', (e) => {
        const colors = ['#FF1493', '#00FFFF', '#9932CC', '#39FF14'];
        const color = colors[Math.floor(Math.random() * colors.length)];
        
        const cursor = document.createElement('div');
        cursor.className = 'fixed w-1 h-1 rounded-full pointer-events-none z-50';
        cursor.style.left = e.clientX + 'px';
        cursor.style.top = e.clientY + 'px';
        cursor.style.background = color;
        cursor.style.boxShadow = `0 0 10px ${color}`;
        cursor.style.animation = 'cyber-fade 1s ease-out forwards';
        document.body.appendChild(cursor);
        setTimeout(() => cursor.remove(), 1000);
      });

      // Glitch effect on hover for interactive elements
      document.querySelectorAll('a, button').forEach(el => {
        el.addEventListener('mouseenter', () => {
          el.style.animation = 'glitch-1 0.3s ease-in-out';
        });
        el.addEventListener('mouseleave', () => {
          el.style.animation = '';
        });
      });

      // Add cyber animations
      const style = document.createElement('style');
      style.textContent = `
        @keyframes cyber-fade {
          0% { opacity: 1; transform: scale(1); }
          50% { opacity: 0.8; transform: scale(1.5); }
          100% { opacity: 0; transform: scale(0.5); }
        }
      `;
      document.head.appendChild(style);
    </script>
  </body>
</html>