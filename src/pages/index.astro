---
import Meta from '../components/Meta.astro';

const title = 'EtchNFT – Etch Like It’s 1989';
const description = 'Your NFTs. Lasered into neon-soaked reality. EtchNFT is coming soon.';
const image = '/og-image.png';
const url = 'https://etchnft.com';
---

<html lang="en" class="scroll-smooth dark">
  <head>
    <meta charset="UTF-8" />
    <Meta {title} {description} {image} {url} />
    <link rel="stylesheet" href="/src/styles/global.css" />
    <link href="https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/53a31143f8.js" crossorigin="anonymous"></script>

    <style>
      body {
        font-family: 'Press Start 2P', monospace;
        background: #0b0b0f;
        color: #00f0ff;
        cursor: crosshair;
        overflow: hidden;
      }

      .crt-overlay {
        position: fixed;
        inset: 0;
        background: repeating-linear-gradient(transparent 0px, rgba(0, 0, 0, 0.1) 1px, transparent 2px);
        pointer-events: none;
        z-index: 9999;
        mix-blend-mode: overlay;
        animation: flicker 0.15s infinite;
      }

      @keyframes flicker {
        0% { opacity: 0.9; }
        50% { opacity: 1; }
        100% { opacity: 0.9; }
      }

      .neon-title {
        text-shadow:
          0 0 5px #00f0ff,
          0 0 10px #00f0ff,
          0 0 20px #00f0ff,
          0 0 40px #ff00ff;
      }

      .trail {
        position: absolute;
        width: 8px;
        height: 8px;
        border-radius: 50%;
        background: #ff00ff;
        pointer-events: none;
        opacity: 0.7;
        animation: fadeOut 0.5s ease-out forwards;
      }

      @keyframes fadeOut {
        to {
          opacity: 0;
          transform: scale(2);
        }
      }
    </style>
  </head>

  <body class="hero-gradient min-h-screen flex flex-col justify-center items-center text-center px-6 py-12 fade-in-up">
    <div class="crt-overlay"></div>

    <div class="glass max-w-2xl w-full border-2 border-pink-500 p-6 neon-title">
      <h1 class="text-4xl sm:text-5xl font-bold mb-6 text-white neon-title">
        <i class="fa-solid fa-cube mr-2"></i>EtchNFT
      </h1>

      <p class="text-md sm:text-xl text-pink-300 mb-6">
        Lasers. NFTs. Retro vibes. We’re almost ready.<br />
        EtchNFT transforms your NFTs into physical collectibles — and maybe mystery drops too.
      </p>

      <form method="POST" action="/api/subscribe" class="w-full flex flex-col sm:flex-row items-center gap-3 justify-center">
        <input
          name="email"
          type="email"
          required
          placeholder="your@email.com"
          class="rounded-full px-5 py-3 w-full sm:w-72 bg-zinc-900 text-white border border-zinc-700 text-xs focus:outline-none focus:border-accent"
        />
        <button type="submit" class="px-6 py-3 rounded-full bg-accent text-black font-semibold hover:bg-white hover:text-black transition text-xs">
          Notify Me
        </button>
      </form>

      <p class="text-xs text-pink-200 mt-6 italic">
        Early access, giveaways, and surprise drops. We'll ping you.
      </p>
    </div>

    <script>
      document.addEventListener('mousemove', (e) => {
        const dot = document.createElement('div');
        dot.classList.add('trail');
        dot.style.left = e.pageX + 'px';
        dot.style.top = e.pageY + 'px';
        document.body.appendChild(dot);
        setTimeout(() => dot.remove(), 500);
      });
    </script>
  </body>
</html>
