---
import "../styles/global.css";
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';
import WalletConnect from '../components/WalletConnect.astro';
import { CartProvider } from '../components/react/CartContext';

const title = 'EtchNFT â€“ Transform Your Digital NFTs into Physical Collectibles';
const description = 'Turn your NFTs into laser-etched physical collectibles. Premium quality plaques, custom apparel, and displays. Ethereum, Polygon, and Solana supported. Order with crypto or card.';
const keywords = 'NFT physical collectibles, laser etched NFT, blockchain art, crypto collectibles, digital to physical NFT, NFT marketplace, ethereum NFT, polygon NFT, solana NFT';
const structuredData = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "EtchNFT",
  "description": description,
  "url": "https://etchnft.com",
  "potentialAction": {
    "@type": "SearchAction",
    "target": {
      "@type": "EntryPoint",
      "urlTemplate": "https://etchnft.com/search?q={search_term_string}"
    },
    "query-input": "required name=search_term_string"
  },
  "sameAs": [
    "https://twitter.com/EtchNFT",
    "https://discord.gg/etchnft"
  ]
};
---

<html lang="en" class="scroll-smooth dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="author" content="EtchNFT" />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href="https://etchnft.com" />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://etchnft.com" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="https://etchnft.com/og-image.png" />
    <meta property="og:site_name" content="EtchNFT" />
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content="https://etchnft.com" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="https://etchnft.com/og-image.png" />
    <meta name="twitter:site" content="@EtchNFT" />
    
    <!-- Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify(structuredData)}></script>
    
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/53a31143f8.js" crossorigin="anonymous"></script>

    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      :root {
        --primary: #DB2777;
        --secondary: #7F73F7;
        --accent: #41C6BB;
        --bg-dark: #0b0b0f;
        --glass-bg: rgba(255, 255, 255, 0.05);
        --glass-border: rgba(255, 255, 255, 0.1);
      }

      body {
        font-family: 'Space Grotesk', sans-serif;
        background: var(--bg-dark);
        color: white;
        min-height: 100vh;
        position: relative;
        overflow-x: hidden;
      }

      .hero-gradient {
        background: linear-gradient(135deg, 
          var(--bg-dark) 0%,
          rgba(123, 31, 162, 0.3) 25%,
          rgba(219, 39, 119, 0.3) 50%,
          rgba(65, 198, 187, 0.3) 75%,
          var(--bg-dark) 100%
        );
      }

      .glass {
        background: var(--glass-bg);
        backdrop-filter: blur(10px);
        border: 1px solid var(--glass-border);
        border-radius: 16px;
      }

      .neon-text {
        text-shadow: 0 0 10px var(--accent), 0 0 20px var(--accent), 0 0 30px var(--accent);
      }

      .btn-gradient {
        background: linear-gradient(135deg, var(--primary), var(--secondary));
        transition: all 0.3s ease;
      }

      .btn-gradient:hover {
        background: linear-gradient(135deg, var(--secondary), var(--accent));
        transform: translateY(-2px);
        box-shadow: 0 10px 30px rgba(219, 39, 119, 0.3);
      }

      .fade-in-up {
        animation: fadeInUp 1s ease-out;
      }

      @keyframes fadeInUp {
        from {
          opacity: 0;
          transform: translateY(50px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      /* Retro grid background */
      .retro-grid {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image: 
          linear-gradient(cyan 1px, transparent 1px),
          linear-gradient(90deg, cyan 1px, transparent 1px);
        background-size: 50px 50px;
        opacity: 0.1;
        z-index: -1;
      }
    </style>
  </head>

  <body class="hero-gradient">
    <div class="retro-grid"></div>
    
    <CartProvider client:load>
      <Nav />
      
      <main class="min-h-screen flex flex-col justify-center items-center text-center px-6 py-20 fade-in-up">
        <article class="glass max-w-4xl w-full p-8 mb-8">
          <header>
            <h1 class="text-5xl sm:text-7xl font-bold mb-6 neon-text">
              <i class="fa-solid fa-pen-nib mr-4"></i>EtchNFT
            </h1>
            
            <p class="text-xl sm:text-2xl text-gray-300 mb-8 leading-relaxed">
              Transform your <span class="text-transparent bg-clip-text bg-gradient-to-r from-primary to-accent">digital NFTs</span> into premium physical collectibles.
            </p>
          </header>
          
          <section class="mb-10">
            <h2 class="text-lg text-gray-400 mb-4">Premium Laser-Etched NFT Collectibles</h2>
            <p class="text-lg text-gray-400 mb-6">
              High-quality laser-etched plaques, custom apparel, and acrylic displays.<br />
              Support for Ethereum, Polygon, and Solana NFTs. Pay with crypto or card.
            </p>
            
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8 text-left">
              <div class="glass p-4">
                <h3 class="text-accent font-bold mb-2">ðŸ”— Multi-Chain Support</h3>
                <p class="text-sm text-gray-400">Ethereum, Polygon, Solana, and more blockchain networks supported.</p>
              </div>
              <div class="glass p-4">
                <h3 class="text-accent font-bold mb-2">âš¡ Fast Processing</h3>
                <p class="text-sm text-gray-400">Quick order processing and worldwide shipping available.</p>
              </div>
              <div class="glass p-4">
                <h3 class="text-accent font-bold mb-2">ðŸ’Ž Premium Quality</h3>
                <p class="text-sm text-gray-400">Laser-etched with precision on premium materials.</p>
              </div>
            </div>
          </section>
          
          <nav class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-8">
            <a href="/gallery" class="btn-gradient text-white font-bold py-4 px-8 rounded-full text-lg no-underline" aria-label="Browse NFT Gallery">
              <i class="fa-solid fa-images mr-2"></i>Browse Gallery
            </a>
            <a href="/my-orders" class="glass border-2 border-accent text-accent font-bold py-4 px-8 rounded-full text-lg no-underline hover:bg-accent hover:text-black transition" aria-label="View My Orders">
              <i class="fa-solid fa-box mr-2"></i>My Orders
            </a>
          </nav>
        </article>
        
        <section class="glass max-w-2xl w-full p-6">
          <h2 class="text-2xl font-bold mb-4 text-accent">
            <i class="fa-solid fa-wallet mr-2"></i>Connect Your Wallet
          </h2>
          <p class="text-gray-400 mb-6">Connect your crypto wallet to view your NFT collection and start creating physical collectibles.</p>
          <WalletConnect />
        </section>
      </main>
      
      <Footer />
    </CartProvider>

    <script>
      // Add some interactive effects
      document.addEventListener('mousemove', (e) => {
        const cursor = document.createElement('div');
        cursor.className = 'fixed w-2 h-2 bg-accent rounded-full pointer-events-none z-50 opacity-50';
        cursor.style.left = e.clientX + 'px';
        cursor.style.top = e.clientY + 'px';
        cursor.style.animation = 'fade-out 0.5s ease-out forwards';
        document.body.appendChild(cursor);
        setTimeout(() => cursor.remove(), 500);
      });

      // Add fade-out animation
      const style = document.createElement('style');
      style.textContent = `
        @keyframes fade-out {
          to {
            opacity: 0;
            transform: scale(2);
          }
        }
      `;
      document.head.appendChild(style);
    </script>
  </body>
</html>