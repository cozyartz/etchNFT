---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { requireUser } from '../../lib/auth.ts';

const user = await requireUser(Astro);

const db = Astro.locals.runtime.env.DB as D1Database;

const orders = await db.prepare(`
  SELECT id, nft_name, full_name, status
  FROM orders
  ORDER BY created_at DESC
`).all();
---

<BaseLayout title="EtchNFT Admin">
  <section class="hero-gradient min-h-screen flex flex-col items-center justify-start px-6 py-12 fade-in-up">
    <div class="glass w-full max-w-5xl text-left">
      <h2 class="text-3xl font-bold text-white mb-6 drop-shadow-[0_0_12px_rgba(0,240,255,0.4)] flex items-center">
        <img src="/etchlogo.png" alt="EtchNFT Logo" class="w-8 h-8 mr-3" />
        Admin Dashboard
      </h2>

      <div class="overflow-x-auto">
        <table class="w-full text-left border-collapse text-sm">
          <thead class="text-accent border-b border-zinc-700 uppercase tracking-wider text-xs">
            <tr>
              <th class="py-3 pr-4">Order ID</th>
              <th class="py-3 pr-4">Name</th>
              <th class="py-3 pr-4">NFT</th>
              <th class="py-3 pr-4">Status</th>
              <th class="py-3">Action</th>
            </tr>
          </thead>
          <tbody>
            {orders.results.map(order => (
              <tr class="border-b border-zinc-800 hover:bg-zinc-800/30 transition">
                <td class="py-3 pr-4 font-mono text-gray-400">{order.id}</td>
                <td class="py-3 pr-4">{order.full_name}</td>
                <td class="py-3 pr-4">{order.nft_name}</td>
                <td class="py-3 pr-4 text-yellow-400">{order.status}</td>
                <td class="py-3">
                  <form action="/admin/mark-etched.ts" method="POST">
                    <input type="hidden" name="id" value={order.id} />
                    <button class="text-xs px-3 py-1 bg-accent text-black rounded-full font-semibold">
                      Mark Etched
                    </button>
                  </form>
                </td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>
    </div>
  </section>
</BaseLayout>
