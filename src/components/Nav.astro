---
import CartToggle from './react/CartToggle';
import WalletConnectButton from './react/WalletConnectButton';
const client: 'only' = 'only';
---

<nav class="w-full px-6 py-4 flex justify-between items-center border-b border-zinc-800">
  <div class="flex items-center gap-8">
    <a href="/" class="text-2xl font-bold tracking-tight text-white drop-shadow-[0_0_6px_rgba(0,240,255,0.5)] hover:text-accent transition">
      <i class="fa-solid fa-pen-nib mr-2"></i>EtchNFT
    </a>
    
    <nav class="hidden md:flex items-center gap-6 text-sm">
      <a href="/gallery" class="text-gray-300 hover:text-accent transition">Gallery</a>
      <a href="/about" class="text-gray-300 hover:text-accent transition">About</a>
      <a href="/admin" class="text-gray-300 hover:text-accent transition">Admin</a>
    </nav>
  </div>

  <div class="flex items-center gap-4">
    <WalletConnectButton client:only={client} />
    <button id="theme-toggle" class="text-xl hover:text-accent transition">
      <i class="fa-solid fa-circle-half-stroke"></i>
    </button>

    <!-- Cart Toggle Button -->
    <CartToggle client:only={client} />
  </div>
</nav>
